{
  "compilerOptions": {
    "lib": ["dom", "es2020"],
    "module": "commonjs",
    "target": "ES2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "dist",
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "types": ["jest"],
    "strict": true,
    "alwaysStrict": true
  },
  "include": ["index.ts", "lib/**/*"]
}
